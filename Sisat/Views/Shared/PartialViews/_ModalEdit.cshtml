@model ProjetoListViewModel

<div class="modal fade" id="projectMod" tabindex="-1" role="dialog" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="projectModalLabel">Atualizar Projeto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <!-- Formulário para cadastro/alteração  -->
                <form asp-controller="PacotesAtualizacoes" asp-action="Edit" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <input type="hidden" asp-for="Pacote.IdProj" id="idPacote" />
                        <label>@Model.Projeto.NomProjeto</label>
                    </div>

                    <div class="form-group">
                        <label>Versão: </label>
                        <input asp-for="@Model.Pacote.NumVersao" class="form-control" id="versao" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Data: </label>
                        <input type="datetime" asp-for="@Model.Pacote.DtLancamento" id="data" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="control-label"></label>
                        <textarea asp-for="@Model.Pacote.RegistroAlteracoes" id="regAlt" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="form-group ml-3">
                        <label for="project-file">Selecionar Arquivo: </label>
                        <input name="arquivoEdit" type="file" class="form-control-file" id="project-file-atualizacao">
                    </div>

                    <input type="hidden" asp-for="Pacote.IdPacote" id="idPac" />
                    <input type="hidden" asp-for="Pacote.IdProj" value="@Model.Projeto.IdProjeto" />

                    <div class="modal-footer">
                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-secondary" />
                        </div>
                        <button type="button" class="btn btn-light" data-dismiss="modal">Fechar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
