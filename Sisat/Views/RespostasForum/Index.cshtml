@model ForumViewModel

<div class="content-wrapper">
    <div class="content-header" style="margin-left:1%;">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="row" style="display:block">
                    <button type="button" class="btn btn-secondary text-white" data-toggle="modal" data-target="#projectComentados" onclick="CarregarIdTopico('@Model.RespostasForuns.Select(r => r.IdTopico).FirstOrDefault()','resposta')" style="font-weight: bold; ">Comentar</button>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid" style="max-height:8rem">
            <div class="row">
                <div class="col-lg-12">
                    @foreach (var resposta in Model.RespostasForuns)
                    {
                        <div class="card">
                            <div class="card-body" style="background:#D3DEDC; ">
                                <div class="row">
                                    <div class="content" style="width: 100%; margin-left:20px;">
                                        <div class="media forum-item">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-circle" width="40" alt="User">
                                            <div class="media-body border-right border-bottom border-color:bg-black" style="max-width:200px;">
                                                <h6 class="small" >@resposta.IdAutorNavigation.Nome</h6>
                                                <p class="small">@resposta.IdAutorNavigation.Conveniados.Select(n => n.NomConveniado).FirstOrDefault()</p>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <p>@resposta.Mensagem</p>
                                        </div>
                                        <div class="media forum-item">
                                            <div class="mt-3">
                                                <a class="text-muted" data-toggle="modal" data-target="#projectComentados" onclick="CarregarIdTopico('@resposta.IdTopico','resposta')" style="font-weight: bold;">Comentar</a>
                                            </div>
                                            <div class="text-muted small text-center align-self-center" style="margin-left:85%">
                                                <span class="message-data-time">@resposta.DataResposta</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="../Shared/PartialViews/_ModalComentados.cshtml" model="@Model" />

<script>
    // function CarregarIdTopico(idForum) {
    //     console.log(idForum);
    //         $('#IdForum').val(idForum);
    // }

    function CarregarIdTopico(id, tipo) {
        if (tipo === 'forum') {
            $('#IdForum').val(id);
        } else if (tipo === 'resposta') {
            $('#IdTopico').val(id);
        }
    }
</script>






